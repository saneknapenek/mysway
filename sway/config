
set $mod Mod4

set $mybindsym bindsym --to-code
# or set $mybindsym bindsym

set $left h
set $down j
set $up k
set $right l

set $term alacritty

# set $menu wofi --conf /home/san/.config/wofi/run/run.config --style /home/san/.config/wofi/run/run.css --show run
set $menu tofi-run --config ~/repo/mysway/tofi/run.ini | xargs swaymsg exec --
set $menu_drun wofi --conf /home/san/.config/wofi/drun/drun.config --style /home/san/.config/wofi/drun/drun.css --show drun


exec_always "setxkbmap -layout us,ru -variant ,, -option grp:win_space_toggle"

input "type:keyboard" {
    xkb_layout us,ru
    xkb_options grp:win_space_toggle
}

input "2362:597:SYNA3602:00_093A:0255_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

focus_follows_mouse yes

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway
#exec swww-daemon
exec mako

